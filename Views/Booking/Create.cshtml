@model HotelManagement.Models.Booking
@{
    ViewBag.Title = "Create Booking";
}

<h2 class="text-center">Create Booking</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Booking Details</h4>
                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.RoomId, "Room", new { @class = "form-label" })
                        @Html.DropDownList("RoomId", ViewBag.RoomId as SelectList, "Select Room", new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.RoomId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.CustomerName, new { @class = "form-label" })
                        @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.CheckIn, new { @class = "form-label" })
                        @Html.EditorFor(model => model.CheckIn, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CheckIn, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group mb-3">
                        @Html.LabelFor(model => model.CheckOut, new { @class = "form-label" })
                        @Html.EditorFor(model => model.CheckOut, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CheckOut, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-success">Submit</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </div>
}
