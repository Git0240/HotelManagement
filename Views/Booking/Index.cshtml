@model IEnumerable<HotelManagement.Models.Booking>
@{
    ViewBag.Title = "Bookings";
}

<h2 class="text-center">Bookings</h2>
<a href="@Url.Action("Create")" class="btn btn-primary mb-3">Add New Booking</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Room</th>
            <th>Check-In</th>
            <th>Check-Out</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.CustomerName</td>
                <td>@booking.Room.RoomType</td>
                <td>@booking.CheckIn.ToString("yyyy-MM-dd")</td>
                <td>@booking.CheckOut.ToString("yyyy-MM-dd")</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = booking.BookingId }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Cancel", "Delete", new { id = booking.BookingId },
                        new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Are you sure?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
