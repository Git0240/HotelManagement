@model IEnumerable<HotelManagement.Models.Role>
@{
    ViewBag.Title = "Roles";
}

<h2 class="text-center">Roles</h2>
<a href="@Url.Action("Create", "Role")" class="btn btn-primary mb-3">Add New Role</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.RoleName</td>
                <td>@role.Description</td>
            </tr>
        }
    </tbody>
</table>
